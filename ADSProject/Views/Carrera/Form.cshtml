@model ProyectoADS.Models.CarrerasViewModel

@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4> Carrera </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" id="operacion" value="@ViewData["Operaciones"]" />
        <input type="hidden" id="_redirectURL" value="@Url.Action("Index","Carrera")" />
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="idCarrera" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="codigoCarrera" class="control-label"></label>
                <input asp-for="codigoCarrera" class="form-control" />
                <span asp-validation-for="codigoCarrera" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="nombreCarrera" class="control-label"></label>
                <input asp-for="nombreCarrera" class="form-control" />
                <span asp-validation-for="nombreCarrera" class="text-danger"></span>
            </div>
            <input type = "checkbox" asp-for= "estado" value = "true" type = "hidden"/>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> Regresar </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
            $(document).ready(function () {

                if ($("#operacion").val() == "leer") {
                        
                    $("form").find("input,select").attr("disabled", true);

                }

            });

        $("form").addClass("form-ajax");
        initAjaxForm();

    </script>


}
